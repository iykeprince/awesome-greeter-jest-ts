  "keywords": ["Hello", "Greeter"],
  "author": "Iyke",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iykeprince/awesome-greeter-jest-ts/issues"
  },
  "homepage": "https://github.com/iykeprince/awesome-greeter-jest-ts#readme",
  "devDependencies": {
    "prettier": "^2.8.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5"
